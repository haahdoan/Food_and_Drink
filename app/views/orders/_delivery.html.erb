<% content_for :head do %>
  <script src="http://maps.google.com/maps?file=api&v=2&key=<%= Settings.delivery.map_key %>" type="text/javascript">
  </script>
  <script>
    $(document).ready(function() {
      initialize()
    });
  </script>
<% end %>

<%= t ".totalproduct" %><strong><span id="totalproduct"><%= @total_price %></span><%= t ".vnd" %></strong><hr>
<strong><%= t ".address" %></strong>
<input type="hidden" id="address1" value="Thanh Luong, Hai Ba Trung, Ha Noi" />
<input type="text" id="address2" onblur="showLocation()" class="form-control" />
<p id="results"></p><hr>
<strong><%= t ".delivery" %></strong>
<table class="table table-hover">
  <tr>
    <td><input type="radio" name="delivery" checked value="Delivery of savings" onclick="showTotalSavings()"/></td>
    <th><%= t ".savings" %></th>
    <td colspan=2><strong><%= t ".fee" %></strong><span id="savings"></span></td>
  </tr>
  <tr>
    <td><input type="radio" name="delivery" value"Fast delivery" onclick="showTotalFast()"/></td>
    <th><%= t ".fast" %></th>
    <td colspan=2><strong><%= t ".fee" %></strong><span id="fast"></span></td>
  </tr>
</table><hr>
<strong id="total"></strong>
