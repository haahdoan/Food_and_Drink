<div class="feedback">
  <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal"><%= t ".feedback" %></button>
</div>
  <!-- Modal -->

  <div class="modal fade" id="exampleModal" tabindex="-1"
    role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">
            <%= t ".feedback" %>
          </h5>
          <button type="button" class="close"
            data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <%= form_for :feedback, url: feedbacks_path do |f| %>
            <%= f.label :subject, class: "col-form-label" %>
            <%= f.text_field :subject, class: "form-control" %>
            <%= f.label :detail, class: "col-form-label" %>
            <%= f.text_area :detail %>
        </div>
        <div class="modal-footer">
          <button type="button" 
            class="btn btn-secondary" data-dismiss="modal">
              <%= t ".close" %>
          </button>
          <%= f.button t(".send"), class: "btn btn-success", type: "submit" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>

